{
    "version": 2,
    "configurePresets": [
        {
            "name": "twip_common",
            "hidden": true,
            "binaryDir": "${sourceDir}/../../build/designerPlugins",
            "cacheVariables": {
                "BUILD_TARGET64": true,
                "ITOM_APP_DIR": "${sourceDir}/../../build/itom",
                "Boost_NO_WARN_NEW_VERSIONS": true
            }
        },
        {
            "name": "develop_windows",
            "displayName": "Develop Windows",
            "inherits": "twip_common",
            "description": "Sets Visual Studio generator.",
            "generator": "Visual Studio 16 2019",
            "cacheVariables": {
                "BUILD_WITH_PCL": true,
                "ITOM_3RDPARTYFOLDER": "${sourceDir}/../../3rdParty",
                "ITOM_3RDPARTYPCLFOLDER": "${sourceDir}/../../3rdPartyPCL",
                "PLUGIN_vtk3dVisualizer": false
            }
        },
        {
            "name": "transporto_release",
            "displayName": "Transporto Release",
            "inherits": "twip_common",
            "description": "Sets Ninja generator and disables debug postfix.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/buildroot-build",
            "cacheVariables": {
                "BUILD_WITH_PCL": false,
                "BUILD_GIT_TAG": false,
                "CMAKE_DEBUG_POSTFIX": {
                    "type": "STRING",
                    "value": ""
                },
                "PLUGIN_evaluateGeometrics": false,
                "PLUGIN_itom1DQwtPlot": true,
                "PLUGIN_itom2DQwtPlot": true,
                "PLUGIN_itomIsoGLFigurePlugin": false,
                "PLUGIN_matplotlibPlot": false,
                "PLUGIN_motorController": false,
                "PLUGIN_plotlyPlot": false,
                "PLUGIN_slider2D": false,
                "PLUGIN_twipOGLPlugin": true,
                "PLUGIN_vtk3dVisualizer": false,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "transporto_debug",
            "displayName": "Transporto Debug",
            "inherits": "transporto_release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}